@model SistemaEFood.Modelos.ViewModels.CarroCompraVM

@{
    ViewData["Title"] = "Cheque Electrónico";
}

<h2>Cheque Electrónico</h2>

<form asp-action="ProcesarChequeElectronico" method="post">
    <div class="form-group">
        <label for="NumeroCheque">Número Cheque:</label>
        <input type="text" class="form-control" id="NumeroCheque" name="NumeroCheque" value="@Model.NumeroCheque" required />
    </div>
    <div class="form-group">
        <label for="Cuenta">Cuenta:</label>
        <input type="text" class="form-control" id="Cuenta" name="Cuenta" value="@Model.Cuenta" required />
    </div>
    <button type="submit" name="action" value="anterior" class="btn btn-secondary">Anterior</button>
    <button type="submit" name="action" value="siguiente" class="btn btn-primary">Siguiente</button>
</form>
