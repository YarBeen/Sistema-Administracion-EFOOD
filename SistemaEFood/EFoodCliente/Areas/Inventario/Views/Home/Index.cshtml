@model SistemaEFood.Modelos.ViewModels.ProductoVM
@using SistemaEFood.Utilidades;
@{
    ViewData["Title"] = "Home Page";
}

<header class="header">
    <div class="container pt-sm-5">
        <div class="heading-primary">
            Las Mejores Comidas <br />
            Para Todo El Día
        </div>
    </div>

</header>


<section>
    <div class="container my-2">
        <div class="col-lg-6 col-md-6 col-sm-6 d-flex">
            <div class="form-group">
                <select asp-for="Producto.LineaComidaId" id="lineaComidaSelect" name="idLineaComida" asp-items="@Model.LineaComidaLista" class="form-select">
                    <option disabled selected> -- Seleccione una línea de comida --</option>
                </select>
                <button type="button" class="btn btn-primary" onclick="refreshDataTable()">
                    <i class="bi bi-search"></i> Buscar Productos
                </button>
            </div>
        </div>

        <div class="row">
            @foreach (var producto in Model.ProductosLista)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2">
                        <img src="@DS.ImagenRuta@producto.ImagenUrl" class="card-img-top" style="aspect-ratio: 1 /1" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@producto.Contenido</h5>
                            <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto bg-white">
                                <a asp-action="Detalle" asp-route-id="@producto.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-tags-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>

    </div>
</section>