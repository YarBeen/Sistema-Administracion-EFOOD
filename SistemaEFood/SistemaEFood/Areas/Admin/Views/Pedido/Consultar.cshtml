@model SistemaEFood.Modelos.ViewModels.PedidoVM
@{
    ViewData["Title"] = "ConsultaPedido";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Consulta de Pedidos</h2>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">

    <div class="row mb-3 align-items-end">
        <div class="col-lg-3">
            <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
            <input type="date" id="fechaInicio" class="form-control" />
        </div>
        <div class="col-lg-3">
            <label for="fechaFin" class="form-label">Fecha de Fin</label>
            <input type="date" id="fechaFin" class="form-control" />
        </div>

        <div class="col-lg-3">
            <div class="form-group">
                <label for="estado" class="form-label">Estado</label>
                <select id="estado" class="form-select">
                    <option disabled selected> -- Seleccione un estado --</option>
                    <option value="Procesada">Procesada</option>
                    <option value="En Curso">En Curso</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="d-flex">
                <button id="btnBuscar" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <button type="button" class="btn btn-secondary" id="btnLimpiarFiltro">
                    <i class="bi bi-arrow-counterclockwise"></i> Limpiar Filtro
                </button>
            </div>
        </div>
    </div>

    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Numero de Pedido</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Monto</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-outline-primary" href="/">
                <i class="bi bi-arrow-return-left"></i> Regresar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pedido.js"></script>
}