
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Procesadores de Pagos</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Agregar Nuevo Procesador de Pago</a>
    </div>
</div>


<br />

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Codigo</th>
                <th>Procesador</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-outline-primary" href="/">
                <i class="bi bi-arrow-return-left"></i> Regresar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/procesadordepago.js"></script>
}

