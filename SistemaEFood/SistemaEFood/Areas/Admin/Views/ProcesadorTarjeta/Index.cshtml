
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Tarjetas</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert" asp-route-id="@ViewData["Id"]">
            <i class="bi bi-plus-square-fill"></i> Agregar Nueva Tarjeta
        </a>
    </div>
</div>


<br />  

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


<div class="row">
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" href="/Admin/ProcesadorDePago">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>
@section Scripts {
    <script src="~/js/procesadortarjeta.js"></script>
}

