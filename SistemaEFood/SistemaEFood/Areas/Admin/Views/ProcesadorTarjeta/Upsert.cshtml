@model SistemaEFood.Modelos.ViewModels.ProcesadorTarjetaVM
@using SistemaEFood.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Añadir tarjetas";
}

<form method="post" enctype="multipart/form-data">

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Tarjeta</label>
                            <select asp-for="ProcesadorTarjeta.TarjetaId" asp-items="@Model.TarjetaLista" class="form-select">
                                <option disabled selected> -- Seleccione la tarjeta a añadir --</option>
                            </select>
                            <span asp-validation-for="ProcesadorTarjeta.TarjetaId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="d-grid gap-2 d-md-block">
                        @if (Model.ProcesadorTarjeta.Id != 0)
                        {
                            <partial name="_BotonesActualizarYRegresar" model="Model.ProcesadorTarjeta.Id" />
                        }
                        else
                        {
                            <div class="d-grid gap-2 d-md-block">
                                <button type="submit" class="btn btn-primary" onfocus="false">
                                    <i class="bi bi-plus-square-fill"></i> Crear
                                </button>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <a class="btn btn-outline-primary" id="regresarBtn">
                                            <i class="bg-info bi-plus-square-fill"></i> Regresar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        var url = window.location.href;
        var partesUrl = url.split("/");
        var id = partesUrl.pop();
        var enlaceUrl = "/Admin/ProcesadorTarjeta/index/" + id;
        document.getElementById('regresarBtn').setAttribute('href', enlaceUrl);
    </script>
}

