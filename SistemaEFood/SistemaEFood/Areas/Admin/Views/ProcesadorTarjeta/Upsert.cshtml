@model SistemaEFood.Modelos.ViewModels.ProcesadorTarjetaVM
@using SistemaEFood.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Añadir tarjetas";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-container">
    <div class="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom p-0 form-title font-color-white">
                <div class="center-form">
                <h2 class="soda-font-bold">@titulo</h2></div>
        </div>

            <div class="center-form">
        <div class="row">
            <div class="col-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Tarjeta</label>
                            <select asp-for="ProcesadorTarjeta.TarjetaId" asp-items="@Model.TarjetaLista" class="form-select">
                                <option disabled selected> -- Seleccione la tarjeta a añadir --</option>
                            </select>
                            <span asp-validation-for="ProcesadorTarjeta.TarjetaId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="d-grid gap-2 d-md-block">
                        @if (Model.ProcesadorTarjeta.Id != 0)
                        {
                            <partial name="_BotonesActualizarYRegresar" model="Model.ProcesadorTarjeta.Id" />
                        }
                        else
                        {
                            <div class="d-grid gap-2 d-md-block">
                                    <button type="submit" class="btn stbgreen-btn" onfocus="false">
                                    <i class="bi bi-plus-square-fill"></i> Crear
                                </button>
                                    <a class="btn stbgreen-btn" id="regresarBtn">
                                    <i class="bi bi-arrow-return-left"></i> Regresar
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        var url = window.location.href;
        var partesUrl = url.split("/");
        var id = partesUrl.pop();
        var enlaceUrl = "/Admin/ProcesadorTarjeta/index/" + id;
        document.getElementById('regresarBtn').setAttribute('href', enlaceUrl);
    </script>
}

